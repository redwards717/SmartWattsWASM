@page "/register";

@inject IUserService _userService;
@inject AppState _appState; 
@inject NavigationManager _nav;
@inject ILocalStorageService _localStorage;

<div class="container">
    <div class="centered-window">

        <h4>Register</h4>

        <hr />
        <form>
            <p>
                <label for="email">Email: </label>
                <input id="email" type="email" @bind-value="email" />
            </p>

            <p>
                <label for="password">Password: </label>
                <input id="password" type="password" @bind-value="password" />
            </p>
            <button type="button" class="btn btn-confirm" @onclick="SubmitRegister">Submit</button>
        </form>
        <p>
            <a href="/">take me to login page</a>
        </p>

    </div>
</div>




@code {

    string email;
    string password;

    private async Task SubmitRegister()
    {
        try
        {
            User user = new User()
            {
                Email = email,
                Password = password
            };

            await _userService.RegisterUser(user);
            _appState.SetUser(user);
            await _localStorage.SetItemAsync("userid", user.UserId);

            Toaster.ShowToast($"user created for {user.Email}", "lightgreen");

            _nav.NavigateTo("/");

        }
        catch (Exception ex)
        {
            Toaster.ShowToast($"error registering - {ex.Message}", "red");
        }
    }

}

<style>

    h4 {
        text-align: center;
    }

    a {
        font-size: 9px;
    }

    form {
        display: table;
    }

    p {
        display: table-row;
    }

    label {
        display: table-cell;
    }

    input {
        display: table-cell;
    }
</style>
